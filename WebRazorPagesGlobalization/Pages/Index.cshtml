@page
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<IndexModel> HtmlLocalizer
<br />
<p>
    @ViewData["Title"]
</p>

<p> @DateTime.Now </p>

<div class="row">
    <div class="col-lg-4">
        <form asp-page="Index" asp-page-handler="Language" method="post">
            <input type="hidden" name="culture" id="culture" value="en-US" />
            <button>Idioma Americano</button>
        </form>
    </div>
    <div class="col-lg-4">
        <form asp-page="Index" asp-page-handler="Language" method="post">
            <input type="hidden" name="culture" id="culture" value="pt-BR" />
            <button>Idioma Brasil</button>
        </form>
    </div>
</div>

<h3>@HtmlLocalizer.GetString("Frase")</h3>


@System.Globalization.CultureInfo.CurrentCulture.DisplayName
